<%- include('../partials/header.ejs') %>

<div class="main-body">
    <div class="container body-container">
        <div class="row mb-4">
            <div class="col-12">
                <h5><strong>Create New Event</strong></h5>
            </div>
        </div>
        <!-- Note the enctype attribute set to multipart/form-data -->
        <form method="POST" action="/events" enctype="multipart/form-data">
            <div class="form-row align-items-center">
                <div class="col-sm-3">
                    <label for="title">Title:</label>
                </div>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter Event Title" required>
                </div>
            </div>
            <div class="form-row align-items-center">
                <div class="col-sm-3">
                    <label for="startDate">Start Date and Time:</label>
                </div>
                <div class="col-sm-9">
                    <input type="datetime-local" class="form-control" id="startDate" name="startDate" required>
                </div>
            </div>
            <div class="form-row align-items-center">
                <div class="col-sm-3">
                    <label for="endDate">End Date and Time:</label>
                </div>
                <div class="col-sm-9">
                    <input type="datetime-local" class="form-control" id="endDate" name="endDate" required>
                </div>
            </div>
            <div class="form-row align-items-center">
                <div class="col-sm-3">
                    <label for="location">Location:</label>
                </div>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="location" name="location" placeholder="Enter Location" required>
                </div>
            </div>
            <div class="form-row align-items-center">
                <div class="col-sm-3">
                    <label for="details">Details:</label>
                </div>
                <div class="col-sm-9">
                    <textarea class="form-control" id="details" name="details" rows="4" required></textarea>
                </div>
            </div>
            <!-- Image upload input -->
            <div class="form-row align-items-center">
                <div class="col-sm-3">
                    <label for="image">Event Image:</label>
                </div>
                <div class="col-sm-9">
                    <input type="file" class="form-control-file" id="image" name="image" accept="image/*" required>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
