                </textarea>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="agreementAcknowledged" name="agreementAcknowledged" required>
                        <label class="form-check-label" for="agreementAcknowledged">I Agree</label>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="signature" class="col-form-label col-form-label-sm">Signature</label>
                    <input type="text" class="form-control form-control-sm" id="signature" name="signature" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="todayDate" class="col-form-label col-form-label-sm">Date</label>
                    <input type="date" class="form-control form-control-sm" id="todayDate" name="todayDate" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="initials" class="col-form-label col-form-label-sm">Initials</label>
                    <input type="text" class="form-control form-control-sm" id="initials" name="initials" required>
                </div>
            </div>
        </div>

        <!-- Section 7: Documents -->
        <div class="container-fluid my-3 p-3 bg-white rounded">
            <h4 class="mb-3">Documents</h4>
            <hr>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="coverLetter" class="col-form-label col-form-label-sm">Cover Letter</label>
                    <input type="file" class="form-control form-control-sm" id="coverLetter" name="coverLetter" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="selfie" class="col-form-label col-form-label-sm">Selfie</label>
                    <input type="file" class="form-control form-control-sm" id="selfie" name="selfie" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="resume" class="col-form-label col-form-label-sm">Resume</label>
                    <input type="file" class="form-control form-control-sm" id="resume" name="resume" required>
                </div>
            </div>
        </div>

        <div class="container my-3 text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<%- include('../partials/footer.ejs') %>
